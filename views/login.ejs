<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome | T.Nestia</title>
    <link rel="stylesheet" href="style.css" />
    <script
      src="https://kit.fontawesome.com/6ad00072de.js"
      crossorigin="anonymous"
    ></script>

  </head>
  <body>
    <h2 class="title">Welcome to <span>T.Nestia</span></h2>

    <div class="container">
      <div class="tabs">
        <h3 id="loginTab" class="center">Let's Log in</h3>
        
      </div>

      <form id="loginForm" class="form active" action="/login" method="post">
        <% if (typeof error !== 'undefined') { %>
  <p id="errorMsg" style="color: red; margin-bottom: 1rem; font-weight: bold;">
    <%= error %>
  </p>

  <script>
    // Hide the error message after 4 seconds
    setTimeout(() => {
      const errorElem = document.getElementById('errorMsg');
      if (errorElem) {
        errorElem.style.transition = 'opacity 0.5s ease';
        errorElem.style.opacity = '0';
        setTimeout(() => errorElem.remove(), 500); // remove from DOM after fade out
      }
    }, 4000);
  </script>
<% } %>
        <input
          type="email"
          name="email"
          placeholder="Email"
          required
          autocomplete="off"
        />
        <input
          type="password"
          name="password"
          placeholder="Password"
          required
        />
        <button type="submit" class="btn">
          <i class="fas fa-sign-in-alt"></i> Login
        </button>

        <p class="or">
          Don't have an account? <a class="link" href="/signup">SignUp</a>
        </p>

        <div class="socials">
          <a
            href="https://accounts.google.com/signin"
            target="_blank"
            class="social"
            title="Login with Google"
          >
            <i class="fab fa-google">G</i>
          </a>
          <a
            href="https://www.facebook.com/login"
            target="_blank"
            class="social"
            title="Login with Facebook"
          >
            <i class="fab fa-facebook-f">f</i>
          </a>
          <a
            href="https://twitter.com/login"
            target="_blank"
            class="social"
            title="Login with Twitter"
          >
            <i class="fab fa-twitter">t</i>
          </a>
        </div>
      </form>

      
  </body>
</html>
